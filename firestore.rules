rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isValidUser() {
      return isSignedIn() && 
             request.resource.data.keys().hasAll(['email', 'displayName', 'createdAt', 'updatedAt']);
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone can read user profiles (for leaderboards, etc)
      allow read: if isSignedIn();
      
      // Only you can create your own profile
      allow create: if isSignedIn() && 
                       isOwner(userId) && 
                       isValidUser();
      
      // Only you can update your own profile
      allow update: if isSignedIn() && isOwner(userId);
      
      // No one can delete (use deleteAccount service instead)
      allow delete: if false;
    }
    
    // Plant logs collection
    match /plantLogs/{logId} {
      // You can only read your own logs
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      
      // You can only create logs for yourself
      allow create: if isSignedIn() && 
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.keys().hasAll(['userId', 'plantId', 'plantName', 'loggedAt', 'weekId']);
      
      // Logs are immutable after creation
      allow update: if false;
      
      // You can only delete your own logs
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
    
    // Weekly summaries collection
    match /weeklySummaries/{summaryId} {
      // Anyone can read summaries (for leaderboards)
      allow read: if isSignedIn();
      
      // Only system can create/update (via server-side functions or through user writes)
      // Users can create their own summaries
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      
      allow delete: if false;
    }
    
    // All-time stats collection
    match /allTimeStats/{userId} {
      // Anyone can read stats (for leaderboards)
      allow read: if isSignedIn();
      
      // Only you can update your own stats
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId);
      
      allow delete: if false;
    }
    
    // Leagues collection
    match /leagues/{leagueId} {
      // Anyone can read leagues (to join via invite code)
      allow read: if isSignedIn();
      
      // Anyone can create a league
      allow create: if isSignedIn() && 
                       request.resource.data.createdBy == request.auth.uid;
      
      // Only the creator can update their league
      allow update: if isSignedIn() && resource.data.createdBy == request.auth.uid;
      
      // Only the creator can delete their league
      allow delete: if isSignedIn() && resource.data.createdBy == request.auth.uid;
    }
    
    // League memberships collection
    match /leagueMemberships/{membershipId} {
      // Anyone can read memberships (to see who's in a league)
      allow read: if isSignedIn();
      
      // Anyone can create memberships (when joining a league)
      allow create: if isSignedIn();
      
      // No updates allowed (leave and rejoin instead)
      allow update: if false;
      
      // Only you can delete your own memberships (leaving a league)
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
    
    // Challenges collection
match /challenges/{challengeId} {
  // Participants can read their challenges
  // Also allow reading if you're the winner (for stats calculation)
  allow read: if isSignedIn() && 
                 (resource.data.challengerId == request.auth.uid || 
                  resource.data.opponentId == request.auth.uid ||
                  resource.data.winnerId == request.auth.uid);
  
  // Only the challenger can create challenges
  allow create: if isSignedIn() && 
                   request.resource.data.challengerId == request.auth.uid;
  
  // Participants can update (accepting/declining)
  // Cloud Functions can also update (they have admin access)
  allow update: if isSignedIn() && 
                   (resource.data.challengerId == request.auth.uid || 
                    resource.data.opponentId == request.auth.uid);
  
  // No deletion allowed
  allow delete: if false;
}
    
    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}